FROM python:3.9.17-slim-bullseye

# Set the working directory in the container
WORKDIR /app

# Copy the repository files to the container
COPY . /app

# Install necessary packages and install xvfb and wget
RUN apt-get update && apt-get install -y xvfb wget

# Install Chrome
RUN wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
RUN dpkg -i google-chrome-stable_current_amd64.deb || apt-get -f install -y

# Install required Python packages
RUN pip install selenium pytest chromedriver_autoinstaller

# Run the pytest command
CMD ["pytest", "-v"]
